

public class inverted_and_half_pyramid {
    
public static void pattern(int rows){

for(int i =1;i<=rows; i++){
    for(int j =1;j<=rows-i;j++){
        System.out.print(" ");
    }
 for(int j= 1; j<= i; j++){
    System.out.print("*");
 }
 System.out.println();
}
}

public static void main(String[] args) {
    
    pattern(5);
}

}
